<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">


        <fragment
            android:id="@+id/map_tomtom"
            android:name="com.tomtom.online.sdk.map.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/map_google"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="roadcondition.cynsore.cyient.com.cynsore.StatsActivity" />

        <!--<WebView
            android:id="@+id/tomtomMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></WebView>-->

        <LinearLayout
            android:id="@+id/lay_searchwidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rel_topbar">

            <EditText
                android:id="@+id/searchwidget"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:clickable="true"
                android:elevation="4dp"
                android:hint="Search Direction.."
                android:padding="5dp"
                android:textSize="15dp"></EditText>
        </LinearLayout>

        <ImageButton
            android:id="@+id/ic_img_myloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_my_location_black_36"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lay_searchwidget" />

        <RelativeLayout
            android:id="@+id/rel_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:padding="15dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/rel_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="#00000000"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:src="@drawable/ic_menu1" />

                <TextView
                    android:id="@+id/ic_txt_notify"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/badge_circle"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="#00FFFFFF"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintRight_toRightOf="@+id/menu"
                    app:layout_constraintTop_toTopOf="@+id/menu" />

            </android.support.constraint.ConstraintLayout>

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/rel_menu"
                android:layout_toRightOf="@+id/rel_menu"
                android:drawableLeft="@drawable/cyient"
                android:src="@drawable/rhalogo2" />

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#00000000"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="2"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/top_curve"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/ic_img_mapselector"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:elevation="5dp"
                android:gravity="center"
                app:srcCompat="@drawable/tomtom_map_selector" />

            <ImageButton
                android:id="@+id/ic_img_graph"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:elevation="5dp"
                android:gravity="center"
                android:visibility="invisible"
                app:srcCompat="@drawable/baseline_bar_chart_24" />

            <Chronometer
                android:id="@+id/scan_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/txt_bg"
                android:gravity="center"
                android:padding="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <Button
                android:id="@+id/head_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/txt_bg"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="HEAD\n00:00" />

            <TextView
                android:id="@+id/speed_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/txt_bg"
                android:gravity="center"
                android:text="SPEED\n00:00" />
        </LinearLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>