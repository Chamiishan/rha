<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:id="@+id/lin_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

    <AutoCompleteTextView
        android:id="@+id/ic_edit_phone"
        android:layout_width="0dp"
        android:layout_weight="3.2"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:hint="@string/ph_num"
        android:layout_alignParentLeft="true"
        android:enabled="true"
        android:inputType="numberSigned"
        android:layout_margin="5dp"/>

    <ImageView
        android:id="@+id/ic_img_edphnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:padding="10dp"
        android:src="@drawable/baseline_edit_black_18" />

</LinearLayout>

    <Button
        android:id="@+id/ic_btn_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_edit_phone"
        android:background="@color/bg_cyient1"
        android:text="@string/capture"
        android:layout_margin="10dp"/>
</RelativeLayout>